<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/clg"
    tools:context=".Student_login">
    <TextView
        android:id="@+id/text"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="30dp"
        android:textColor="#0B6F65"/>


    <EditText
        android:id="@+id/et_gmail"
        android:layout_below="@+id/text"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint=" Enter Email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_below="@+id/et_gmail"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter roll number as a password"
        android:inputType="textPassword"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button"/>
    <Button
        android:id="@+id/button1"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:text="Sign In"
        android:textAllCaps="false"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_height="wrap_content"
        android:textColor="#00f"
        android:background="@drawable/button"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password ?"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:textColor="#01010E"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click here "

            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:textColor="#01010E"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:onClick="streg"
        android:text="Register"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:textColor="#00f"/>

</LinearLayout>

</LinearLayout>