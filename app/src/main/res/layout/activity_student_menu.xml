<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/clg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/clg"
        tools:context=".StudentMenu">

        <ImageView
            android:layout_marginLeft="-10dp"
            android:layout_gravity="center"
            android:id="@+id/reg"
            android:onClick="regis"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/reg3"/>


        <TextView

            android:layout_below="@+id/reg"
            android:text="RegisterYourself"
            android:onClick="regis"
            android:foregroundGravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0E0E0D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:layout_toRightOf="@+id/reg"
            android:layout_gravity="center"
            android:id="@+id/book"
            android:onClick="books"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="150dp"

            android:src="@drawable/books"/>

        <TextView

            android:foregroundGravity="center"
            android:layout_marginLeft="160dp"
            android:layout_below="@+id/book"
            android:onClick="books"
            android:text="Book"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0E0E0D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginLeft="-10dp"
            android:layout_gravity="center"
            android:id="@+id/notes"
            android:layout_below="@+id/reg"
            android:onClick="note"
            android:layout_marginTop="100dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/notes"/>

        <TextView
            android:foregroundGravity="center"
            android:layout_below="@+id/notes"
            android:onClick="note"
            android:text="Make Notes"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="35dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0E0E0D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_alignLeft="@+id/book"
            android:layout_gravity="center"
            android:id="@+id/calendar"
            android:onClick="calendar"
            android:layout_marginTop="300dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/calendar"/>


        <TextView
            android:gravity="center"
            android:layout_marginLeft="180dp"
            android:layout_below="@+id/calendar"
            android:text="Calendar"
            android:onClick="calendar"
            android:layout_marginTop="4dp"
            android:foregroundGravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0E0E0D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_below="@+id/notes"
            android:layout_gravity="center"
            android:id="@+id/gc"
            android:onClick="gc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:src="@drawable/gc"/>


        <TextView
            android:gravity="center"
            android:layout_below="@+id/gc"
            android:text="Google-Classroom"
            android:onClick="gc"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#0E0E0D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</ScrollView>